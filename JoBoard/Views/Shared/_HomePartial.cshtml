
@using Microsoft.AspNet.Identity



@if (!Request.IsAuthenticated)
{

    <section class="py-5 bg-image overlay-primary fixed overlay" style="background-image: url('/assets/images/hero_1.jpg');">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h2 class="text-white">Wanting to post or save a Job?</h2>
                    <p class="mb-0 text-white lead">If you want to post or save a job you need to login.</p>
                </div>
                <div class="col-md-3 ml-auto">
                    <a href="@Url.Action("Login", "Account")" class="btn btn-warning btn-block btn-lg">Login</a>
                </div>
            </div>
        </div>
    </section>


}
